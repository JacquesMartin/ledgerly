
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can manage their own creditors list
    match /users/{userId}/creditors/{creditorId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Rules for loan_applications
    match /loan_applications/{loanId} {
      // Any authenticated user can create a loan application.
      allow create: if request.auth != null;

      // Any authenticated user can read any loan application.
      // This is permissive and should be locked down further in production.
      allow read: if request.auth != null;
      
      // Allow the creditor to update the status of the loan.
      // We are assuming the creditorId is the UID of the creditor user.
      allow update: if request.auth != null && request.auth.uid == resource.data.creditorId;
    }
  }
}
